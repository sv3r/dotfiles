#!/bin/sh

CURRENT_SONG="$HOME/.local/bin/current-song"

zscroll -p " | " --delay 0.2 \
    --length 25 \
    --match-command "playerctl -p spotify status" \
    --match-text "Playing" "--scroll 1" \
    --match-text "Paused" "--before-text 'ïŠ‹ ' --scroll 0" \
    --update-interval 1 \
    --update-check true $CURRENT_SONG &
wait
